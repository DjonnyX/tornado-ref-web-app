{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": ".bin",
        "baseUrl": ".",
        "paths": {
            "*": [
                "../../node_modules/*",
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        ".bin"
    ]
  }